{
  "name": "timer",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/timer/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nrwl/vite:build",
      "outputs": [
        "{options.outputPath}"
      ],
      "defaultConfiguration": "production",
      "options": {
        "outputPath": "dist/apps/timer"
      },
      "configurations": {
        "development": {
          "mode": "development"
        },
        "production": {
          "mode": "production"
        }
      }
    },
    "serve": {
      "executor": "@nrwl/vite:dev-server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "timer:build",
        "port": 3100,
        "open": true
      },
      "configurations": {
        "development": {
          "buildTarget": "timer:build:development",
          "hmr": true
        },
        "production": {
          "buildTarget": "timer:build:production",
          "hmr": false
        }
      }
    },
    "preview": {
      "executor": "@nrwl/vite:preview-server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "timer:build"
      },
      "configurations": {
        "development": {
          "buildTarget": "timer:build:development"
        },
        "production": {
          "buildTarget": "timer:build:production"
        }
      }
    },
    "test": {
      "executor": "@nrwl/vite:test",
      "outputs": [
        "coverage/apps/timer"
      ],
      "options": {
        "passWithNoTests": true,
        "reportsDirectory": "../../coverage/apps/timer"
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": [
        "{options.outputFile}"
      ],
      "options": {
        "lintFilePatterns": [
          "apps/timer/**/*.{ts,tsx,js,jsx}"
        ]
      }
    },
    "docker-build": {
      "executor": "@nx-tools/nx-container:build",
      "options": {
        "context": ".",
        "file": "apps/timer/Dockerfile",
        "tags": [
          "mcesarczyk/timely-timer:latest",
          "ghcr.io/mcesarczyk/timely-timer:latest"
        ]
      }
    }
  },
  "tags": []
}